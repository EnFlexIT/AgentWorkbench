<project name="ZIB - Class creation for importing Gas Network definitions" default="xjc" basedir=".">
	
	<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
          Properties: Folder structure / ClassPath / Version Info                        
         - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
	<!-- Folder information for compiling and packing -->
	<property name="jdk.dir" value="C:\Programme\Java\jdk1.6.0_14" />
	<property name="src.dir" value="D:\10 Java Projects\AgentGUI\projects" />
	
	<property name="etc.dir" value="${src.dir}\gasmas\transfer\zib\resources" />
	
	<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
          target: xjc =>                         
         - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
	<target name="xjc" description="....">     
		<exec executable="${jdk.dir}/bin/xjc.exe">         
			<arg value="-d"/>         
			<arg value="${src.dir}"/>         
			<arg value="-p"/>        
			<arg value="gasmas.transfer.zib.net"/>         
			<arg value="${etc.dir}\Gas.xsd"/>
			<arg value="-b"/>     
			<arg value="${etc.dir}\01JAXB_Gas_Bindings.xjb"/>
		</exec> 
	</target> 
	
</project>
