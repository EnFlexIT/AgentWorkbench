<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.enflexit.awb.ws</groupId>
	<artifactId>de.enflexit.awb.ws.restapi.codegen</artifactId>
	<version>0.2.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<properties>
		<yamlFile>RestApi.yaml</yamlFile>
		<srcBasePackage>de.enflexit.awb.ws.restapi.gen</srcBasePackage>
		
		<srcDirMainTarget>/target/generated-sources/swagger/src/main/java/</srcDirMainTarget>
		<srcDirGenTarget>/target/generated-sources/swagger/src/gen/java/</srcDirGenTarget>
		
		<openApiGeneratorVersion>5.4.0</openApiGeneratorVersion>
		<builderHelperVersion>3.3.0</builderHelperVersion>
		<antRunVersion>3.0.0</antRunVersion>
		<mavenResourcespluginVersion>3.2.0</mavenResourcespluginVersion>
	</properties>
	
	<build>
		<plugins>
		
			<plugin>
				<groupId>org.openapitools</groupId>
				<artifactId>openapi-generator-maven-plugin</artifactId>
				<version>${openApiGeneratorVersion}</version>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<inputSpec>${project.basedir}/${yamlFile}</inputSpec>
							<!-- For client code -->
							<!-- <language>java</language> --> 

							<!-- For server code -->	
							<generatorName>jaxrs-jersey</generatorName>
							<library>jersey2</library>
							
							<apiPackage>${srcBasePackage}</apiPackage>
							<modelPackage>${srcBasePackage}.model</modelPackage>
							<invokerPackage>${srcBasePackage}.handler</invokerPackage>
							
							<generateApiTests>false</generateApiTests>
							<generateApiDocumentation>true</generateApiDocumentation>
							<generateModelTests>false</generateModelTests>
							<generateModelDocumentation>false</generateModelDocumentation>
							<generateSupportingFiles>true</generateSupportingFiles>
							<configOptions>
								<interfaceOnly>false</interfaceOnly>
								<dateLibrary>java8</dateLibrary>
							</configOptions>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>${builderHelperVersion}</version>
				<executions>
					<execution>
						<id>regex-property</id>
						<goals>
							<goal>regex-property</goal>
						</goals>
						<configuration>
							<name>scrBaseDir</name>
							<value>${srcBasePackage}</value>
							<regex>\.</regex>
							<replacement>/</replacement>
							<failIfNoMatch>false</failIfNoMatch>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>${antRunVersion}</version>
				<executions>
					<execution>
						<id>echo-property</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<echo>Source base package: '${srcBasePackage}' to path '${scrBaseDir}'</echo>
								<echo>Copy files from ${project.basedir}${srcDirTarget}${scrBaseDir}</echo>
								<echo>to ${project.basedir}/../src/${scrBaseDir}/</echo>
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>${mavenResourcespluginVersion}</version>
				<executions>
					<execution>
						<id>copy-gen</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<encoding>UTF-8</encoding>
							<outputDirectory>${project.basedir}/../src/${scrBaseDir}/</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}${srcDirGenTarget}${scrBaseDir}</directory>
									<!-- 
									<includes>
										<include>*.java</include>
									</includes>
									-->
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>copy-main</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<encoding>UTF-8</encoding>
							<outputDirectory>${project.basedir}/../src/${scrBaseDir}/</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}${srcDirMainTarget}${scrBaseDir}</directory>
									<!-- 
									<includes>
										<include>*.java</include>
									</includes>
									-->
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
		</plugins>
	</build>

</project>